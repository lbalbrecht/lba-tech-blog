<div id="newPost">
    <div class="flex-column justify-space-around">
        <br>
        <br>
        <form id="new-post-form">
            <div class="form-group">
                <label for="formGroupExampleInput">
                    <h2>Post title</h2>
                </label>
                <input type="text" class="form-control" id="newPostTitle">
            </div>
            <br>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">
                    <h2>Write your post here</h2>
                </label>
                <textarea class="form-control" id="newPostBody" rows="8"></textarea>
