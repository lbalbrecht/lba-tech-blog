<a href="/api/posts/{{id}}" class="post-link">
    <div class="my-posts">
        <section class="userPosts" id="my-post">
            <div class="postHeader display-flex">
                <h3 class="postTitle">{{title}}</h3>
                <h3>{{post_date}}</h3>
            </div>
            <br>
            <p><strong>{{post_author}}</strong></p>
            <p class="postBody">{{post_body}}</p>
        </section>
    </div>
</a>